<% include ../headerDashboard %>
<% include ../dashboard/dashboardheader %>



<div class="row">
	<div class="col-7 offset-3" style="margin-top: 100px;">
		<h1 class="text-secondary text-center">user List</h1>
	<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">Type</th>
      <th scope="col">Status</th>
      <th scope="col">delete</th>
      <th scope="col">update</th>
    </tr>
  </thead>
  <tbody>
    

	<% for(var i=0; i< userArray.length; i++) {%>	

    <tr>
      <th scope="row"> <%= userArray[i].U_ID %> </th>
      <td> <%= userArray[i].LAST_NAME %> </td>
      <td> <%= userArray[i].U_MOBILE %> </td>
      <td> <%= userArray[i].U_EMAIL %> </td>
      <td><%= userArray[i].U_TYPE %></td>
      <td><%= userArray[i].U_STATUS %></td>
      <td> 
        <form action="http://localhost:3000/user/deleteuser" method="post"> 
        
       <input type="text" name="userIdDelete" hidden="true" value="<%= userArray[i].U_ID %>">

        <input type="submit" value="Delete" class="btn btn-danger">

      </form>
      </td>
      

      <td> 

        <a class="btn btn-primary" href="http://localhost:3000/user/updateuser/<%=userArray[i].U_ID%>">Update</a>

    </td>

    </tr>
    
    <%}%>


  </tbody>
</table>


	</div>
</div>






<% include ../footerDashboard %>